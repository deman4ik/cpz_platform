{
  "name": "cpz_platform",
  "version": "1.0.0",
  "description": "Cryptuoso Cryptocurrency Trading Platform",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/*.service.ts services/**/*.service.ts services/**/**/*.service.ts",
    "importer": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/importer/importer-runner.service.ts services/importer/importer-worker.service.ts services/connector/public-connector.service.ts services/db/candles/*.service.ts services/db/db-importers.service.ts services/api.service.ts services/auth.service.ts services/db/user/*.service.ts",
    "db": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/db/**/*.service.ts services/db/*.service.ts",
    "connector": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/connector/*.service.ts",
    "exwatcher": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/exwatcher.service.ts services/connector/public-connector.service.ts",
    "backtester": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/backtester/*.service.ts services/db/**/*.service.ts services/db/*.service.ts services/api.service.ts services/auth.service.ts",
    "robot": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/robot/*.service.ts",
    "tg": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/api.service.ts services/auth.service.ts services/db/user/*.service.ts services/db/robot/*.service.ts services/db/db-markets.service.ts services/connector/*.service.ts services/userRobot/*.service.ts services/exwatcher.service.ts services/db-connector-jobs.service services/telegram/*.service.ts",
    "auth": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/api.service.ts services/auth.service.ts services/db/user/db-users.service.ts services/db/user/db-user-exchange-accs.service.ts services/connector/private-connector-worker.service.ts",
    "mail": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config local.config.ts services/mail.service.ts",
    "cli": "moleculer connect",
    "start": "node ./node_modules/moleculer/bin/moleculer-runner --env --config prod.config.js dist/services",
    "startPM": "pm2 start pm.prod.config.js",
    "stopPM": "pm2 stop pm.prod.config.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "tslint -p tsconfig.json",
    "dc:up": "docker-compose up --build -d",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "cryptuoso",
    "cryptucurrency",
    "trading",
    "bitcoin"
  ],
  "author": "Dmitry Shatalov (@deman4ik)",
  "devDependencies": {
    "@types/async-retry": "^1.4.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.29",
    "@types/bull": "^3.12.0",
    "@types/dotenv": "^6.1.1",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jest": "^24.9.0",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/node": "^12.12.25",
    "@types/node-cron": "^2.0.2",
    "@types/node-fetch": "^2.5.4",
    "@types/require-from-string": "^1.2.0",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^10.11.3",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "mockdate": "^2.0.5",
    "moleculer-repl": "^0.6.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "tslint-config-airbnb-base": "^0.3.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "async-retry": "^1.3.1",
    "bcrypt": "^3.0.6",
    "ccxt": "^1.21.83",
    "dayjs": "^1.8.19",
    "dotenv": "^8.2.0",
    "fastest-validator": "^0.6.19",
    "graphql": "^14.5.8",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.1",
    "https-proxy-agent": "^2.2.4",
    "ioredis": "^4.14.1",
    "ioredis-lock": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "logdna-winston": "^2.3.0",
    "mailgun-js": "^0.22.0",
    "microjob": "^0.6.2",
    "moleculer": "^0.14.0-beta7",
    "moleculer-apollo-server": "^0.1.3",
    "moleculer-bull": "^0.2.5",
    "moleculer-db": "^0.8.4",
    "moleculer-db-adapter-sequelize": "^0.2.4",
    "moleculer-web": "^0.9.0-beta7",
    "nats": "^1.4.0",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.0",
    "pg": "^7.17.1",
    "pg-hstore": "^2.3.3",
    "redlock": "^4.1.0",
    "require-from-string": "^2.0.2",
    "sequelize": "^5.21.3",
    "socket.io-client": "^2.3.0",
    "telegraf": "^3.35.0",
    "telegraf-i18n": "^6.6.0",
    "telegraf-session-redis": "^5.1.0",
    "tulind": "^0.8.18",
    "uuid": "^3.4.0",
    "winston": "^3.2.1",
    "winston-logzio": "^5.0.3"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
