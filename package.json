{
  "name": "cpz_platform",
  "version": "1.0.0",
  "description": "Cryptuoso Cryptocurrency Trading Platform",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config dev.config.ts services/*.service.ts services/**/*.service.ts services/**/**/*.service.ts",
    "importer": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config importer.config.ts services/importer/importer-runner.service.ts services/importer/importer-worker.service.ts services/connector/public-connector.service.ts services/db/candles/*.service.ts services/db/db-importers.service.ts services/api.service.ts services/auth.service.ts services/db/user/*.service.ts",
    "db": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config db.config.ts services/db/*/*.service.ts services/db/*.service.ts",
    "connector": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config connector.config.ts services/connector/*.service.ts",
    "exwatcher": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config exwatcher.config.ts services/exwatcher.service.ts services/connector/public-connector.service.ts",
    "backtesterWorker": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config importerWorker.config.ts services/backtester/backtester-worker.service.ts services/db/candles/*.service.ts services/db/backtest/*.service.ts",
    "robot": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config robot.config.ts services/robot/*.service.ts",
    "auth": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config dev.config.ts services/api.service.ts services/auth.service.ts services/db/user/*.service.ts services/db/robot/*.service.ts services/telegram/*.service.ts",
    "cli": "moleculer connect",
    "start": "node ./node_modules/moleculer/bin/moleculer-runner --env --config prod.config.js dist/services",
    "startPM": "pm2 start ecosystem.config.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "tslint -p tsconfig.json",
    "dc:up": "docker-compose up --build -d",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "cryptuoso",
    "cryptucurrency",
    "trading",
    "bitcoin"
  ],
  "author": "Dmitry Shatalov (@deman4ik)",
  "devDependencies": {
    "@types/async-retry": "^1.4.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.24",
    "@types/bull": "^3.10.3",
    "@types/dotenv": "^6.1.1",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/node": "^12.7.5",
    "@types/node-cron": "^2.0.2",
    "@types/node-fetch": "^2.5.1",
    "@types/require-from-string": "^1.2.0",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.5",
    "@types/validator": "^10.11.3",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "mockdate": "^2.0.5",
    "moleculer-repl": "^0.6.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-airbnb-base": "^0.3.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "async-retry": "^1.2.3",
    "bcrypt": "^3.0.6",
    "ccxt": "^1.18.1166",
    "dayjs": "^1.8.16",
    "dotenv": "^8.1.0",
    "fastest-validator": "^0.6.17",
    "graphql": "^14.5.6",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.0",
    "https-proxy-agent": "^2.2.2",
    "ioredis": "^4.14.1",
    "jsonwebtoken": "^8.5.1",
    "microjob": "^0.6.2",
    "moleculer": "^0.14.0-beta4",
    "moleculer-apollo-server": "github:moleculerjs/moleculer-apollo-server",
    "moleculer-bull": "^0.2.5",
    "moleculer-db": "^0.8.2",
    "moleculer-db-adapter-sequelize": "^0.2.2",
    "moleculer-web": "^0.9.0-beta6",
    "nats": "^1.0.1",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "redlock": "^4.0.0",
    "require-from-string": "^2.0.2",
    "sequelize": "^5.19.0",
    "socket.io-client": "^2.2.0",
    "telegraf": "^3.32.0",
    "telegraf-i18n": "^6.6.0",
    "telegraf-session-redis": "^5.1.0",
    "tulind": "^0.8.18",
    "uuid": "^3.3.3"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
